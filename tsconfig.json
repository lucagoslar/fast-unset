{
	"ts-node": {
		"files": true,
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
		},
		"rootDirs": ["./src"],
		"types": ["node", "ts-jest", "./types"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
